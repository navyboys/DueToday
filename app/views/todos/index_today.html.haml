= render 'shared/content_title', title: "Todos for Today"
.well
  %ul
    - current_user.todos.where(due: Date.today).each do |todo|
      %li
        - if todo.completed?
          = link_to '', todo_path(todo, 'completed'), method: :patch, class: 'glyphicon glyphicon-check'
          %strike{:style => 'opacity: 0.4;'}= todo.title
        - else
          = link_to '', todo_path(todo, 'completed'), method: :patch, class: 'glyphicon glyphicon-unchecked'
          = todo.title
          = link_to '', todo, method: :delete, class: 'glyphicon glyphicon-trash'
.well
  = bootstrap_form_for(@todo) do |f|
    = f.text_field :title
    = f.submit 'Add'
.well
  = link_to 'Show History', todos_history_path
